{
    "manifest_version": 3,
    "name": "Mindful Scroll Check",
    "version": "1.1",
    "description": "Asks if you're enjoying your time every 5 minutes on short form content.",
    "permissions": ["storage", "tabs"],
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
      {
        "matches": [
          "*://www.youtube.com/shorts/*",
          "*://www.tiktok.com/*"
        ],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
  }
  